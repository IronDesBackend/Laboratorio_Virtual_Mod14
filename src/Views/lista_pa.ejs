<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Librerias de estilo -->
    <link rel="stylesheet" href="../css/estilo.css" type="text/css">
    <link rel="stylesheet" href="./css/fontello.css" type="text/css">
    <!------------------------->
    <title>Pacientes</title>
</head>
<body>
    <header>
        <h1>
            <img class="logo" src="/img/Las-Cruces-B.png">
                Listado de Pacientes
                <img class="logo" src="/img/Las-Cruces-B.png">
            </h1>
        <hr>
        <%- include('navBar') %>
</header>
    <div id="lista" name="lista" class="paciente lista_style">
        <h3 class="fir_enun">Listado de Pacientes</h2>
            <table>
                <thead class="pac_th">
                    <tr>
                        <th scope="col">Cedula de Ciudadania</th>
                        <th scope="col">Nombres</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Edad</th>
                        <th scope="col">NÃºmero de contacto</th>
                        <th scope="col">Especialidad requerida</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody class="pac_tr">
                    <% consultaLista.forEach( c => { %>
                        <tr>
                            <td scope="row"><%= c.Cedula %></td>
                            <td><%= c.Nombres %></td>
                            <td><%= c.Apellidos %></td>
                            <td><%= c.Edad %></td>
                            <td><%= c.Telefono %></td>
                            <td><%= c.Especialidad %></td>
                            <td>
                                <span><a href="/lista_pa/editar/ <%= c.Cedula %>" class="btn icon-edit">Editar</a></span>
                                <span><a  href="/lista_pa/borrar/ <%= c.Cedula %>"  class="btn icon-trash-empty">Borrar</a></span>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
    </div>
 
</body>
